{
  "name": "project-url-shortening-service-challenge",
  "version": "1.0.0",
  "description": "Node Express MVC Project Skeleton By Saifeddine RHOUMA",
  "main": "dist/server.js",
  "engines": {
    "node": "> 18.12.0",
    "npm": "> 6.0"
  },
  "scripts": {
    "build": "npx tsc -p tsconfig.json",
    "start:dev": "cross-env NODE_ENV=development nodemon --config ./nodemon.json src/server.ts",
    "start:prod": "cross-env NODE_ENV=production node dist/server.js",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "debug": "npm run start:dev -- --inspect",
    "format": "prettier ./src",
    "test": "cross-env NODE_ENV=test jest",
    "test:e2e": "cross-env NODE_ENV=test jest --config jest.e2e.json",
    "prepare": "husky"
  },
  "keywords": [
    "Skeleton",
    "Node",
    "Express",
    "MVC",
    "TypeScript"
  ],
  "author": "Saifeddine RHOUMA",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/mongodb": "^4.0.6",
    "@types/mongoose": "^5.11.96",
    "@types/morgan": "^1.9.9",
    "@types/nanoid": "^2.1.0",
    "@types/node": "^22.10.1",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.7",
    "eslint": "^9.16.0",
    "globals": "^15.13.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.3",
    "nodemon": "^3.1.7",
    "prettier": "^3.4.2",
    "supertest": "^7.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.17.0"
  },
  "dependencies": {
    "class-transformer": "^0.5.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "envalid": "^8.0.0",
    "express": "^4.21.1",
    "helmet": "^8.0.0",
    "mongodb": "^6.13.0",
    "mongoose": "^8.9.5",
    "morgan": "^1.10.0",
    "nanoid": "^3.3.8",
    "picocolors": "^1.1.1",
    "qr-image": "^3.2.0",
    "winston": "^3.17.0",
    "zod": "^3.23.8"
  },
  "_moduleAliases": {
    "@constants": "build/src/core/constants/",
    "@configs": "build/src/configs/",
    "@utils": "build/src/utils/",
    "@tsTypes": "build/src/types/"
  },
  "lint-staged": {
    "*.(t|j)s": [
      "npm run format",
      "npm run lint",
      "git add .",
      "npm run test"
    ]
  }
}
